<Application x:Class="ImageSearchServer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ImageSearchServer"
             xmlns:viewModel="clr-namespace:ImageSearchServer.MVVM.ViewModel"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/MainWindowTheme.xaml" />
                <ResourceDictionary Source="Themes/ImageCardTheme.xaml" />
                <ResourceDictionary Source="Themes/CommonTheme.xaml" />
                <ResourceDictionary Source="Themes/HomeViewTheme.xaml" />
                <ResourceDictionary Source="Themes/SearchBarTheme.xaml" />
                <ResourceDictionary Source="Themes/ResultsWapperTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
